<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrinho de Compras</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;700&family=Dancing+Script:wght@400..700&display=swap');

        * {
            margin: 0;
            padding: 0;
            border: none;
            box-sizing: border-box;
        }

        body {
            width: 100vw;
            font-family: "Cormorant Garamond", serif; 
            font-weight: 300;
            background: rgb(238,174,202);
            background: radial-gradient(circle, rgba(238,174,202,1) 0%, rgba(148,187,233,1) 100%);
        }

        /* navbar */
        .navbar {
            position: fixed;
            width: 100%;
            top: 0;
            padding: 1rem 2rem;
            backdrop-filter: blur(4px);
        }

        .navbar__wrapper {
            display: flex;
            justify-content: flex-end;
            flex-wrap: wrap;
        }

        .navbar__menu ul li {
            display: inline-block;
        }

        li a {
            list-style: none;
	        text-decoration: none;
            padding: 1rem;
            color: #000;
            font-size: 1rem;
            text-transform: uppercase;
        }

        a:hover {
            color: palevioletred;
        }

        .title_wrapper {
            text-align: center;
            margin-top: 4rem;
        }

        .title {
            font-size: 2rem;
            padding: 1rem 0;
        }

        section {
            display: table;
            width: 50%;
            margin: 20px 0;
            padding: 10px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        section p {
            display: table-cell;
            font-size: 1.2rem;
            color: #555;
            padding: 20px;
            text-align: center;
            vertical-align: middle;
        }

        /* buttons */
        button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #7b9acc;
            color: #fff;
            font-size: 1rem;
            font-weight: 400;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #658bb5;
        }

        button a {
            color: inherit;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <main>
        <div class="navbar">
            <div class="navbar__wrapper">
                <nav class="navbar__menu">
                    <ul>
                        <li><a href="/register">Criar conta</a></li>
                        <li><a href="/login">Login</a></li>
                        <button id="logoutButton">Logout</button>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="title_wrapper">
            <h1 class="title">Carrinho de Compras</h1>
        </div>
        
        <section>
            <% if (cartProducts.length > 0) { %>
                <ul>
                    <% cartProducts.forEach((product, index) => { %>
                        <li class="cart-item">
                            <strong>Nome:</strong> <%= product.name %><br>
                            <strong>Preço Unitário:</strong> <%= product.price %> €<br>
                            <strong>Quantidade:</strong> <%= product.quantity %><br>
                            <strong>Total:</strong> <%= (product.price * product.quantity).toFixed(2) %> €
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>O seu carrinho está vazio.</p>
            <% } %>
        </section> 

        <section>
            <h2>Total a Pagar: <span id="grand-total"><%= total.toFixed(2) %> €</span></h2>
        </section>
        
        <button><a href="/">Voltar</a></button>
        <button onclick="checkout()">Checkout</button>

    </main>


<!-- logout -->
<script>
        document.getElementById("logoutButton").addEventListener("click", async () => {
        console.log(localStorage.getItem("user_token"));
            // enviar POST request
            const response = fetch("/logout", {
                method: "POST",
                headers: {
                    "Authorization": "Bearer " + localStorage.getItem("user_token"),
                    "Content-Type": "application/json"
                } 
            }) .then(response => response.json()).then( 
                result => {
                    if (result.message) {
                        // limpa o token do localStorage
                        localStorage.removeItem("user_token");
                        // redireciona oara a login page
                        window.location.href = "/login";
                    } else {
                        alert("Logout failed. Please try again.");
                    } 
                }
            );
        });
</script>
</body>
</html>
